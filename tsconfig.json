{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "strictPropertyInitialization": false,
    "noEmitHelpers": false
  }
}